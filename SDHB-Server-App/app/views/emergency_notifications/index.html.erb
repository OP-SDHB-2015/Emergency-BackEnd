<!--SEND NOTIFICATION VIEW-->
<html>
	<head>
		<title>Send Notification</title>
	</head>
	<body>
		<div id="wrapper">
			<!-- Sidebar -->
			<div id="sidebar-wrapper">
				<ul class="sidebar-nav">
					<li class="sidebar-brand">
						<a href="/">
							Send Notification
						</a>
					</li>
					<li>
						<a href="/emergency_notifications_group">Send Group Notification</a>
					</li>
					<li>
						<a href="/emergency_notifications_region">Send Region Notification</a>
					</li>
					<li>
						<a href="/allusers">All Users</a>
					</li>
					<li>
						<a href="/allnotifications">Previous Notifications</a>
					</li>
					<li>
						<%= link_to "Sign Out", destroy_admin_session_path, :method => :delete %>
					</li>
				</ul>
			</div>
			<!-- /#sidebar-wrapper -->
			<!-- Page Content -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">
							<a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><span id="arrow" class="glyphicon glyphicon-chevron-left"></span></a>
						</div>
					</div>
				</div>
				<div id="main">
					<h1 class="jumbotron">Send a Notification</h1>
					<!--Send Notification Button-->
					<form action="/emergency_notifications" method="POST" class="form-horizontal">
						<h3>New Emergency</h3>
						<br>
						<div class="input-group" id="inputboxcenter">
							<span class="input-group-addon" id="sizing-addon1">Title</span>
							<input type="text" name="emergency_notification[title]" class="form-control" placeholder="Title" aria-describedby="sizing-addon1">
						</div>
						<br>
						<div class="input-group" id="inputboxcenter">
							<span class="input-group-addon" id="sizing-addon2">Description</span>
							<input type="textarea" name="emergency_notification[message]" class="form-control" placeholder="Description" aria-describedby="sizing-addon2">
						</div>
						<br>
						<button class="btn btn-primary" id="buttonsend">Send Emergency</button>
					</form>
				</div>
			</div>
			<!-- /#page-content-wrapper -->

		</div>
		<!-- /#wrapper -->
		<!-- Menu Toggle Script -->
		<script>
		$("#menu-toggle").click(function(e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
			//Created by Alexander McNeill
			if($("#wrapper").hasClass("toggled"))
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-right");
			}
			else
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-left");
			}

		});
		</script>
	</body>
</html>
