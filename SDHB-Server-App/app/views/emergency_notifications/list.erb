<!--ALL NOTIFICATIONS VIEW-->
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">
		<title>All Users</title>
	</head>
	<body>
		<div id="wrapper">
			<!-- Sidebar -->
			<div id="sidebar-wrapper">
				<ul class="sidebar-nav">
					<li class="sidebar-brand">
						<a href="/">
							Send Notification
						</a>
					</li>
					<li>
						<a href="/emergency_notifications_group">Send Group Notification</a>
					</li>
					<li>
						<a href="/allusers">All Users</a>
					</li>
					<li>
						<a href="/allnotifications">Previous Notifications</a>
					</li>
					<li>
						<%= link_to "Sign Out", destroy_admin_session_path, :method => :delete %>
					</li>
				</ul>
			</div>
			<!-- /#sidebar-wrapper -->
			<!-- Page Content -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">
							<a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><span id="arrow" class="glyphicon glyphicon-chevron-left"></span></a>
						</div>
					</div>
				</div>
			<h1 class="jumbotron">Previous Emergencies</h1>
			<table class="table table-striped">
			  <thead>
				<tr>
				  <th>Date Sent</th>
				  <th>Title</th>
				  <th>Description</th>
				  <th>Confirmations</th>
				  <th colspan="3"></th>
				</tr>
			  </thead>
			  <tbody>
				<% EmergencyNotification.all.each do |emergency_notification| %>
				  <tr>
					<td><%= emergency_notification.created_at %></td>
					<td><%= emergency_notification.title %></td>
					<td><%= emergency_notification.message %></td>
					<td><%= emergency_notification.confirmations %></td>
				  </tr>
				<% end %>
			  </tbody>
			</table>
			<br>
			<%= button_to "Clear Notifications", {:controller=>"emergency_notifications", :action => "clear_notifications"} , :method => "get" %>

			<!-- /#page-content-wrapper -->

		</div>
		<!-- /#wrapper -->
		<!-- Menu Toggle Script -->
		<script>
		$("#menu-toggle").click(function(e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
			//Created by Alexander McNeill
			if($("#wrapper").hasClass("toggled"))
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-right");
			}
			else
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-left");
			}

		});
		</script>
	</body>
</html>
