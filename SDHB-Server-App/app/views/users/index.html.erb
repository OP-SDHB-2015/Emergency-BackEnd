<!--ALL USERS VIEW-->
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">
		<title>All Users</title>
	</head>
	<body>
		<div id="wrapper">
			<!-- Sidebar -->
			<div id="sidebar-wrapper">
				<ul class="sidebar-nav">
					<li class="sidebar-brand">
						<a href="/">
							Send Notification
						</a>
					</li>
					<li>
						<a href="/allusers">All Users</a>
					</li>
					<li>
						<a href="/users/new">New User</a>
					</li>
				</ul>
			</div>
			<!-- /#sidebar-wrapper -->
			<!-- Page Content -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">
							<a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><span id="arrow" class="glyphicon glyphicon-chevron-left"></span></a>
						</div>
					</div>
				</div>
			<h1 class="jumbotron">Listing users</h1>
			<table class="table table-striped">
			  <thead>
				<tr>
				  <th>Staffid</th>
				  <th>Lastname</th>
				  <th>Firstname</th>
				  <th>Deviceid</th>
				  <th>Authenticated</th>
				  <th>Region</th>
				  <th>Group</th>
				  <th colspan="3"></th>
				</tr>
			  </thead>
			  <tbody>
				<% @users.each do |user| %>
				  <tr>
					<td><%= user.staffID %></td>
					<td><%= user.lastName %></td>
					<td><%= user.firstName %></td>
					<td><div id="deviceID"><%= user.deviceID %></div></td>
					<td><%= user.authenticated %></td>
					<td><%= user.region %></td>
					<td><%= user.group %></td>
					<!--<td><%= link_to 'Show', user %></td>-->
					<td><%= link_to 'Edit', edit_user_path(user) %></td>
					<td><%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				  </tr>
				<% end %>
			  </tbody>
			</table>
			<br>
			<button class="btn btn-primary"><%= link_to 'New User', new_user_path %></button>
			<!-- /#page-content-wrapper -->

		</div>
		<!-- /#wrapper -->
		<!-- Menu Toggle Script -->
		<script>
		$("#menu-toggle").click(function(e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
			//Created by Alexander McNeill
			if($("#wrapper").hasClass("toggled"))
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-right");
			}
			else
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-left");
			}
			
		});
		</script>
	</body>
</html>
