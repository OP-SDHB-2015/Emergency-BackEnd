<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Staffid</th>
      <th>Lastname</th>
      <th>Firstname</th>
      <th>Deviceid</th>
      <th>Authenticated</th>
      <th>Region</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.staffID %></td>
        <td><%= user.lastName %></td>
        <td><%= user.firstName %></td>
        <td><%= user.deviceID %></td>
        <td><%= user.authenticated %></td>
        <td><%= user.region %></td>
        <td><%= user.group %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

