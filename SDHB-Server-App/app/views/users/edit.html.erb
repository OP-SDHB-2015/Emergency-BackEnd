<!--EDIT USER VIEW-->
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="">
		<title>All Users</title>
	</head>
	<body>
		<div id="wrapper">
			<!-- Sidebar -->
			<div id="sidebar-wrapper">
				<<ul class="sidebar-nav">
					<li class="sidebar-brand">
						<a href="/">
							Send Notification
						</a>
					</li>
					<li>
						<a href="/emergency_notifications_group">Send Group Notification</a>
					</li>
					<li>
						<a href="/emergency_notifications_region">Send Region Notification</a>
					</li>
					<li>
						<a href="/allusers">All Users</a>
					</li>
					<li>
						<a href="/allnotifications">Previous Notifications</a>
					</li>
					<li>
						<%= link_to "Sign Out", destroy_admin_session_path, :method => :delete %>
					</li>
				</ul>
			</div>
			<!-- /#sidebar-wrapper -->
			<!-- Page Content -->
			<div id="page-content-wrapper">
				<div class="container-fluid">
					<div class="row">
						<div class="col-lg-12">
							<a href="#menu-toggle" class="btn btn-default" id="menu-toggle"><span id="arrow" class="glyphicon glyphicon-chevron-left"></span></a>
						</div>
					</div>
				</div>
			<h1 class="jumbotron">Edit User</h1>
			<%= render 'form' %>
			<!-- /#page-content-wrapper -->
		</div>
		<!-- /#wrapper -->
		<!-- Menu Toggle Script -->
		<script>
		$("#menu-toggle").click(function(e) {
			e.preventDefault();
			$("#wrapper").toggleClass("toggled");
			//Created by Alexander McNeill
			if($("#wrapper").hasClass("toggled"))
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-right");
			}
			else
			{
				$("#arrow").attr('class', "glyphicon glyphicon-chevron-left");
			}

		});
		</script>
	</body>
</html>
